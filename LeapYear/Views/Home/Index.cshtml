<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>LeapYearChecker</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container well">
      <h1>Check for Leap Years!!</h1>
      <div class="row">
        <form class="form" action="/" method="post">
          <input type="number" name="year" placeholder="Enter a year">
          <button type="submit" class="btn btn-info" name="button">GO!</button>
        </form>
      </div>
      <div class="row">
        @if(@Model != "")
        {
          <h2>@Model</h2>
        }
      </div>

    </div>
  </body>
</html>
